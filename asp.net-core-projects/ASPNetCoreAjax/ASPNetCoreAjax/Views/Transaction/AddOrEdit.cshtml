@model ASPNetCoreAjax.Models.Transaction

@{
    Layout = null;
    ViewData["Title"] = "AddOrEdit";
}

@*<h4><i class="fas fa-dollar"></i> Transaction</h4>
*@
<div class="row">
    <div class="col-md-12">
        <form id="transactionForm" asp-action="AddOrEdit" asp-route-id="@Model.TransactionId" onsubmit="return submitForm(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Date" />
            <div>
                @Html.HiddenFor(x=> x.TransactionId,new { @class="", style="" })
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AccountNumber" class="control-label"></label>
                        <input asp-for="AccountNumber" placeholder="Account Number" class="form-control" />
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BeneficiaryName" class="control-label"></label>
                        <input asp-for="BeneficiaryName" placeholder="Beneficiary" class="form-control" />
                        <span asp-validation-for="BeneficiaryName" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" placeholder="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TransactionType" class="control-label"></label>
                        <select asp-for="TransactionType" class="form-control">
                            <option value="">Please select</option>
                            <option value="Funds Transfer">Funds Transfer</option>
                            <option value="ATM Withdraw">ATM Withdraw</option>
                        </select>
@*                        <input asp-for="TransactionType" class="form-control" />*@

                        <span asp-validation-for="TransactionType" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary col-md-12" />
            </div>
        </form>
    </div>
</div>
@*<div>
    <a asp-action="Index">Back to List</a>
</div>
*@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
